{{"hero-banner.css" | asset_url | stylesheet_tag}}

<section class="hero-banner">
    <div class="hero-banner__content">
        <h2 class="hero-banner__title">Hero banner</h2>
        <p class="hero-banner__subtitle">Welcome to our store! Discover amazing products and deals.</p>
        <a href="/products/{{ section.settings.hero_product}}" class="hero-banner__cta">Shop Now</a>
    </div>
    <div>
       <img
            src="{{section.settings.hero_image |  image_url}}"
            width="400",
            height="400"
        />
    </div>
</section>

<script>
    console.log("product-Object:", {{section.settings.hero_product | json}})
</script>

{% schema %}
{
    "name":  "hero Banner",
    "settings": [
        {
          "type": "image_picker",
          "id": "hero_image",
          "label": "Main Image"
        },
        {
          "type": "product",
          "id": "hero_product",
          "label": "Button Link"
        }
        
    ],
    "presets": [
    {
        "name": "Hero Banner"

    }
]
}
{% endschema %}